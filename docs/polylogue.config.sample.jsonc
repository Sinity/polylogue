{
  // Copy this file to ~/.polylogueconfig or $XDG_CONFIG_HOME/polylogue/config.json and adjust as needed.
  "defaults": {
    "collapse_threshold": 30,
    "html_previews": true,
    "html_theme": "dark",
    "output_dirs": {
      "render": "~/polylogue-data/render",
      "sync_drive": "~/polylogue-data/sync-drive",
      "sync_codex": "~/polylogue-data/codex",
      "sync_claude_code": "~/polylogue-data/claude-code",
      "import_chatgpt": "~/polylogue-data/chatgpt",
      "import_claude": "~/polylogue-data/claude"
    }
  },
  "drive": {
    // Optional: override where credentials.json and token.json live
    "credentials_path": "~/.config/polylogue/credentials.json",
    "token_path": "~/.local/state/polylogue/token.json",
    // Optional: tune retries/backoff (integers; defaults are fine for most)
    "retries": 3,
    "retry_base": 0.5
  },
  "index": {
    // backend: "sqlite" (default), "qdrant", or "none"
    "backend": "sqlite",
    "qdrant": {
      "url": "http://localhost:6333",
      "api_key": null,
      "collection": "polylogue",
      "vector_size": null
    }
  },
  "exports": {
    // Locations for chatgpt/claude exports (zip or extracted conversations.json)
    "chatgpt": "~/polylogue-data/exports/chatgpt",
    "claude": "~/polylogue-data/exports/claude"
  }
}
